<h2>Sign In</h2>

	<% form_for(:session, :url => sessions_path) do |f| %>
		<%= f.error_messages %>
		<div class="field">
			<%= f.label :email %><br />
			<%= f.text_field :email %>
		</div>
		<div class="field">
			<%= f.label :password %><br />
			<%= f.password_field :password %>
		</div>
		<div class="actions">
			<%= f.submit "Sign In" %>
		</div>
	<% end %>

